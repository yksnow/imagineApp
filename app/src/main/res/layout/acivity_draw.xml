<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/iv_back"
                android:src="@mipmap/ic_back"
                android:layout_width="40dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_next"
                android:text="next"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_toStartOf="@+id/view"
                android:layout_marginEnd="20dp"
                android:src="@mipmap/ic_cancel"
                android:layout_width="40dp"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/view"
                android:layout_centerInParent="true"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_marginStart="10dp"
                android:id="@+id/iv_resume"
                android:layout_toEndOf="@+id/view"
                android:src="@mipmap/ic_resume"
                android:layout_width="40dp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <com.example.test.widget.BoardView
            android:id="@+id/board_view"
            android:layout_below="@+id/ll_top"
            android:layout_above="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:padding="10dp"
            android:id="@+id/ll_bottom"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <ImageView
                android:id="@+id/iv_draw"
                android:src="@mipmap/ic_pencil"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <ImageView
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/iv_draw"
                android:id="@+id/iv_eraser"
                android:src="@mipmap/icon_rubber"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <ImageView
                android:layout_alignParentEnd="true"
                android:id="@+id/iv_clear_all"
                android:src="@mipmap/ic_clear_all"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <SeekBar
                android:layout_alignParentBottom="true"
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                tools:progress="4" />
        </RelativeLayout>
    </RelativeLayout>
</layout>